
#recuperer avec networksetup les cartes Ethernet, rechercher broadcast
#version longue
BROAD=$(ifconfig $(networksetup -listallhardwareports | grep -w "Hardware Port: Ethernet" | grep 'Device: ' | cut -d : -f2) |  grep 'broadcast' | tr -s ' ' | cut -d ' ' -f6)
echo $BROAD

#version courte
BROAD=$(ifconfig en0 | grep broadcast | cut -d ' ' -f6)
echo $BROAD


#indiquer les adresses IP du reseau avec ping
#ARP affiche et modifie les tables de traduction d'adresses Internet vers Ethernet, sans flag celui fu hostname
ping -c1 $BROAD | arp -a | cut -d ' ' -f2 | cut -d '(' -f2 | cut -d ')' -f1